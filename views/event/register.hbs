<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>Register</h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{#each messages}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/event/register" method="POST">
            
            
            {{#each fields}}
            <div class="row">
                {{#each this}}
                <div class="col-md-6">
                    {{formField this.fieldName this.fieldLabel this.fieldType this.fieldValue this.fieldMandatory ../../badgeCategories}}
                </div>
                {{/each}}
            </div>
            {{/each}}


            <input type="submit" class="btn btn-success" value="Save">
            <a href="/event/registration/{{session.eventId}}" class="btn btn-default">Cancel</a>
        </form>
    </div>

</div>