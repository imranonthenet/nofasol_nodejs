<ol class="breadcrumb">
  <li><a href="/event">Home</a></li>
  <li class="active">Exported Files</li>
</ol>

<div class="row">
    <div class="col-md-12">
        <h1>Users</h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{#each messages}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}

        <a href="/user/create" class="btn btn-primary">Create User</a>

            
            
            <table class="table">
                <thead>
                <tr>
                    <th>Filename</th>
                    <th>Creation Date</th>
                    <th>Row Count</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                    {{#each files}}
                        <tr>
                            <td>{{this.filename}}</td>
                            <td>{{formatDate this.creationDate 'custom2'}}</td>
                            <td>{{this.rowCount}}</td>
                            <td>{{this.status}}</td>
                            <td>
                                <a href="/user/edit/{{this._id}}" class="btn btn-primary" >Download</a>
                                <a href="/user/delete/{{this._id}}" class="btn btn-danger" >Delete</a>
                            </td>
                        </tr>

                    {{/each}}
                </tbody>

            </table>

    </div>

</div>
