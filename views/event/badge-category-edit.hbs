<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Badge Category</h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{#each messages}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/event/badge-category-edit" method="POST">
            <input type="hidden" name="badgeCategoryId" value="{{badgeCategory._id}}">
            <div class="form-group">
                <label for="eventName">Category Name</label>
                <input type="text" id="badgeCategory" name="badgeCategory" class="form-control" value="{{badgeCategory.desc}}" >
            </div>

            <input type="submit" value="save" class="btn btn-success">
            <a href="/event/badge-categories/{{session.eventId}}" class="btn btn-default">Cancel</a>
        </form>
    </div>

</div>
