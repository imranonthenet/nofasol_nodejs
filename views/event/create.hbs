<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Event Initials</h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{#each messages}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/event/create" method="POST" enctype="multipart/form-data">
            
            <div class="form-group">
                <label for="eventName">Event Name</label>
                <input type="text" id="eventName" name="eventName" class="form-control" value="{{event.eventName}}">
            </div>

            <div class="form-group">
                <label for="eventLogo">Event Logo</label>
                <input type="file" id="filetoupload" name="filetoupload" class="form-control" >
            </div>

            <div class="form-group">
                <label for="fromDate">From Date</label>
                <input type="text" id="fromDate" name="fromDate" class="form-control" value="{{event.fromDate}}">
            </div>
            <div class="form-group">
                <label for="toDate">To Date</label>
                <input type="text" id="toDate" name="toDate" class="form-control" value="{{event.toDate}}">
            </div>

            <input type="submit" value="save" class="btn btn-success">
            <a href="/event" class="btn btn-default">Cancel</a>
        </form>
    </div>

</div>
