<!-- A5 paper size -->
<!--
    Equivalent A5 paper dimensions in pixels at 300 DPI and 72 DPI respectively are: 
    1748 pixels x 2480 pixels (print resolution) 
    420 pixels x 595 pixels (screen resolution)
-->
<canvas id="badgeCanvas" width="420" height="595" style="border: 1px solid black;"></canvas>
<img id="barcode">

<script src="/library/jquery-3.3.1.min.js"></script>
<script src="/library/fabric.min.js"></script>
<script src="/library/JsBarcode.all.min.js"></script>

      <script>
        $(document).ready(function(){
          JsBarcode("#barcode", "{{ eventData.barcode }} ", {
            format: "CODE128",
            width: 1,
            height:40,
            margin: 5,
            textMargin: 0,
            fontSize: 10,
            displayValue: true
          });

          var canvas = new fabric.Canvas('badgeCanvas');
          
          var txtInstance = new fabric.Textbox('test', {
            left: {{event.fullName_left}},
            top: {{event.fullName_top}},
            width: 100,
            angle: 0,
            opacity: 1,
            fontFamily: 'Arial'
          });
          canvas.add(txtInstance);
          
        });
      //window.print();
      
      //setTimeout(function(){ window.close(); }, 500);
      
      </script>